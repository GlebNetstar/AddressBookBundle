{% extends 'NetstarAddressBookBundle::layout.html.twig' %}

{% block content %}
	<h1>Address book</h1>
	
	<table border="1" width="100%">
		<tr>
			<th>ID</th>
			<th>First name</th>
			<th>Last name</th>
			<th>Address 1</th>
			<th>Address 2</th>
			<th>City</th>
			<th>ZIP code</th>
			<th>Phone home</th>
			<th>Phone mobile</th>
			<th>Action</th>
		</tr>
		{% for person in persons %}
		<tr>
			<td>{{ person.id }}</td>
			<td>{{ person.firstName }}</td>
			<td>{{ person.lastName }}</td>
			<td>{{ person.address1 }}</td>
			<td>{{ person.address2 }}</td>
			<td>{{ person.city }}</td>
			<td>{{ person.zip }}</td>
			<td>{{ person.phone1 }}</td>
			<td>{{ person.phone2 }}</td>
			<td>
				<a href="{{ path('netstar_address_book_edit', {id: person.id}) }}">Edit</a>
				&nbsp;
				<a href="{{ path('netstar_address_book_delete', {id: person.id}) }}">Delete</a>
			</td>
		</tr>
		{% endfor %}
	</table>
	
	<a href="{{ path('netstar_address_book_add') }}">Add new</a>
	
	<br />
	<br />
	<br />
	
	
{% endblock %}
